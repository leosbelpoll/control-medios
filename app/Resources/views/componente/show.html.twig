{% extends 'base.html.twig' %}

{% block body %}
    <h1>Componente</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ componente.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ componente.nombre }}</td>
            </tr>
            <tr>
                <th>Descripcion</th>
                <td>{{ componente.descripcion }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('componente_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('componente_edit', { 'id': componente.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
